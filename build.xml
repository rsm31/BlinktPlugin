<!-- Build script for BlinktHelper API documentation -->

<project name="" default="blinkt-doc" basedir=".">

	<property environment="env"/>
	<import file="${env.APAMA_HOME}/etc/apama-macros.xml"/>

	<target name="blinkt-doc">
		<generate-apamadoc outputDir="doc">
			<fileset dir=".">
				<include name="BlinktHelper.mon"/>
			</fileset>
		</generate-apamadoc>
	</target>

</project>
